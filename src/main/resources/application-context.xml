<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:auditoriums/*-auditorium.properties"/>

    <!--domain DAO's-->
    <bean id="userDAO" class="spring.petproject.dao.mapstorage.domainimpl.StaticUserDAO"/>
    <bean id="eventDAO" class="spring.petproject.dao.mapstorage.domainimpl.StaticEventDAO"/>

    <!--domain Services-->
    <bean id="eventService" class="spring.petproject.service.impl.EventServiceImpl">
        <constructor-arg ref="eventDAO"/>
    </bean>
    <bean id="userService" class="spring.petproject.service.impl.UserServiceImpl">
        <constructor-arg ref="userDAO"/>
    </bean>

</beans>